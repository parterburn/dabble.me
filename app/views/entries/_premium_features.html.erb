<div class="well <%= add_class %>">
  <div class="center">
    <div class="s-entry-date">
      <% if current_user.is_pro? && params[:plan] != "pro" %>
        <h2>Premium features unlocked!</h2>

        <% if current_user.plan_type.present? %>
          <div class="text-muted text-sm s-scrollable">
            Modify or cancel your subscription at
            <span class="font-medium">
              <%= current_user.plan_type.html_safe %>
            </span>
          </div>
        <% else %>
          <div>Your PRO account is being provided free of charge.</div>
        <% end %>
      <% else %>
        <h2 style="font-size: 18px;">Unlock all premium features with a PRO account</h2>
        <div class="row">
          <div class="col-md-6 col-md-offset-3 col-xs-10 col-xs-offset-1" style="margin-bottom: 20px;">
            <%= button_to checkout_path(plan: "yearly"), method: "post", style: "margin: 10px auto; min-width: 150px;", class: "btn btn-success btn-lg" do %>
              $40<span style="font-size: 13px; color: #ddd">／</span>year
              <br>
              <span style="font-size: 12px; display: block;color: #F9F9F9;">2 months free</span>
            <% end %>
            <%= button_to checkout_path(plan: "monthly"), method: "post", style: "color: oklch(46.6% 0.025 107.3); font-size: 15px; background: none; border: none;", class: "text-muted" do %>
              or $4<span style="font-size: 13px; color: #ddd">／</span>month
            <% end %>
          </div>
        </div>
      <% end %>
      <h3 style="margin-top: 0;">
        <span>
          <i class="fa fa-rocket"></i>
        </span>
      </h3>
    </div>
  </div>
  <div class="<%= add_class.include?('s-features') ? '' : 's-scrollable' %>" style="padding-top: 0;">
    <div class="<%= add_class.include?('s-features') ? '' : 'entry-panel' %>">
