<% content_for :title, "The OhLife.com Alternative" %>

<section class="py-12 lg:py-20">
  <div class="mx-auto max-w-3xl px-4 sm:px-6 lg:px-8">
    <div class="text-center">
      <h1 class="font-serif text-4xl sm:text-5xl tracking-tight mb-8">
        The OhLife.com Alternative
      </h1>

      <!-- Logo transition -->
      <div class="flex items-center justify-center gap-4 mb-8">
        <%= image_tag "ohlifelogo.gif", alt: "OhLife", class: "h-12" %>
        <svg class="h-6 w-6 text-muted" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 4.5 21 12m0 0-7.5 7.5M21 12H3" />
        </svg>
        <span class="font-serif text-3xl text-primary">Dabble me<span class="text-accent">.</span></span>
      </div>

      <p class="text-lg text-muted max-w-xl mx-auto mb-8">
        Replace OhLife with Dabble Me — it was built as a near-replica of OhLife that gives you the same private place to write.
      </p>

      <a href="<%= new_user_registration_path %>" class="btn btn-primary">
        Import OhLife Entries
      </a>
    </div>

    <!-- Features -->
    <div class="mt-16 grid sm:grid-cols-2 gap-8">
      <div class="card p-6">
        <ul class="space-y-3">
          <li class="flex items-start gap-3">
            <svg class="h-5 w-5 text-accent flex-shrink-0 mt-0.5" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" d="M4.5 12.75l6 6 9-13.5" />
            </svg>
            <span class="text-muted">Import OhLife / Ahhlife / Trailmix.life Entries</span>
          </li>
          <li class="flex items-start gap-3">
            <svg class="h-5 w-5 text-accent flex-shrink-0 mt-0.5" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" d="M4.5 12.75l6 6 9-13.5" />
            </svg>
            <span class="text-muted">Daily or Weekly Email Reminders</span>
          </li>
          <li class="flex items-start gap-3">
            <svg class="h-5 w-5 text-accent flex-shrink-0 mt-0.5" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" d="M4.5 12.75l6 6 9-13.5" />
            </svg>
            <span class="text-muted">Reply-to-post entries</span>
          </li>
          <li class="flex items-start gap-3">
            <svg class="h-5 w-5 text-accent flex-shrink-0 mt-0.5" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" d="M4.5 12.75l6 6 9-13.5" />
            </svg>
            <span class="text-muted">Search entries</span>
          </li>
        </ul>
      </div>

      <div class="card p-6">
        <ul class="space-y-3">
          <li class="flex items-start gap-3">
            <svg class="h-5 w-5 text-accent flex-shrink-0 mt-0.5" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" d="M4.5 12.75l6 6 9-13.5" />
            </svg>
            <span class="text-muted">#ThrowbackThursday everyday in your inbox</span>
          </li>
          <li class="flex items-start gap-3">
            <svg class="h-5 w-5 text-accent flex-shrink-0 mt-0.5" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" d="M4.5 12.75l6 6 9-13.5" />
            </svg>
            <span class="text-muted">Attach images to save with your entry</span>
          </li>
          <li class="flex items-start gap-3">
            <svg class="h-5 w-5 text-accent flex-shrink-0 mt-0.5" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" d="M4.5 12.75l6 6 9-13.5" />
            </svg>
            <span class="text-muted">Tag your entries with hashtags</span>
          </li>
          <li class="flex items-start gap-3">
            <svg class="h-5 w-5 text-accent flex-shrink-0 mt-0.5" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" d="M4.5 12.75l6 6 9-13.5" />
            </svg>
            <a href="/#pricing" class="text-accent hover:text-primary underline">Plus more with Dabble Me PRO</a>
          </li>
        </ul>
      </div>
    </div>

    <!-- CTA -->
    <div class="mt-12 text-center">
      <a href="<%= new_user_registration_path %>" class="btn btn-primary">
        Get started free →
      </a>
    </div>
  </div>
</section>
